{
  "name": "Eye Dropper",
  "version": "0.1.7",
  "description": "Eye Dropper for Google Chrome.",

  "background_page": "background.html",
  "options_page": "options.html",
  "content_scripts": [ {
      "all_frames": true,
      "js": [ "edropper2.js" ],
      "matches": [ "http://*/*", "https://*/*" ],
      "run_at": "document_end"
   } ],

  "icons": {
    "48": "icon_48.png",
    "128": "icon_128.png"
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "EyeDropper",
    "popup": "popup.html"
  },

  "permissions": [ "tabs" ]
}
